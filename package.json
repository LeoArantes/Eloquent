{
	"name": "eloquent",
	"author": "eloquent",
	"description": "eloquent",
	"version": "1.0.0",
	"private": true,
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"@popperjs/core": "^2.11.5",
		"bootstrap": "^5.1.3",
		"electron-is-dev": "^2.0.0",
		"i18next": "^20.6.1",
		"i18next-browser-languagedetector": "^6.1.4",
		"i18next-http-backend": "^1.4.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-i18next": "^11.17.4",
		"react-is": "^17.0.2",
		"react-router-dom": "^5.3.3",
		"react-scripts": "^5.0.1",
		"react-transition-group": "^4.4.2",
		"react-webcam": "^7.0.1",
		"socket.io-client": "^4.5.1",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@babel/plugin-proposal-optional-chaining": "^7.18.6",
		"@craco/craco": "^5.9.0",
		"concurrently": "^6.5.1",
		"cross-env": "^7.0.3",
		"electron": "^19.0.7",
		"electron-builder": "^23.1.0",
		"wait-on": "^5.3.0"
	},
	"main": "public/electron/main.js",
	"homepage": "./",
	"scripts": {
		"start": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run electron:start\"",
		"build": "npm run react:build && electron-builder -c.extraMetadata.main=build/electron/main.js",
		"react:start": "craco start",
		"react:build": "craco build",
		"electron:start": "wait-on tcp:3000 && electron ."
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"build": {
		"extends": null,
		"productName": "AppName",
		"appId": "br.com.appname",
		"icon": "",
		"files": [
			"dist/**/*",
			"build/**/*",
			"public/**/*.json",
			"public/**/**/**/*.json",
			"node_modules/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "public/assets/locales/",
				"to": "assets/locales/",
				"filter": [
					"**/*"
				]
			}
		],
		"directories": {
			"buildResources": "assets"
		},
		"win": {
			"icon": "build/icon.png",
			"artifactName": "${productName}-${version}-Setup.${ext}",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"ia32"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
